extends layout

block scripts
    script(src='/javascripts/jquery/jquery-3.4.1.js')
    script(src='/javascripts/ui/connectui.js')
block content

    br
    br

    #connectform.container.jumbotron
        h3= 'Map Your Data Schema'
        h5= 'Enter the Credentials Below for your Presto Cluster'
        form.form-group(action = '/connect/create', method = 'post')
            label.col-form-label(for = 'hostname') Cluster Host:
            input.form-control(type = 'text', placeholder = 'http://' name='hostname')
            label.col-form-label(for = 'port') Cluster Port:
            input.form-control(type = 'text', placeholder = '8080', name = 'port')
            label.col-form-label(for = 'catalog') Catalog Name:
            input.form-control(type = 'text', placeholder = 'tpch' name = 'catalog')
            label.col-form-label(for = 'schema') Schema Name:
            input.form-control(type = 'text', placeholder = 'sf1' name = 'schema')
            label.col-form-label(for = 'user') User:
            input.form-control(type = 'text', placeholder = 'root', name = 'user')
            br
            .form-inline.my-2.my-lg-0
                input#connectbtn.btn.btn-outline-success.mr-sm-2(type = 'submit' value = 'Submit')